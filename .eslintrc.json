{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["next", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": 2,
    "no-console": [
      1,
      {
        "allow": ["info", "warn", "error"]
      }
    ],
    "no-nested-ternary": 2,
    "no-param-reassign": 2,
    "no-unused-vars": 2,
    "no-use-before-define": 2,
    "object-curly-newline": [
      2,
      {
        "ExportDeclaration": {
          "consistent": true
        },
        "ImportDeclaration": {
          "consistent": true
        },
        "ObjectExpression": {
          "consistent": true
        },
        "ObjectPattern": {
          "consistent": true
        }
      }
    ],
    "object-property-newline": [
      2,
      {
        "allowAllPropertiesOnSameLine": true
      }
    ],
    "padding-line-between-statements": [
      2,
      {
        "blankLine": "never",
        "prev": "import",
        "next": "import"
      }
    ]
  }
}
